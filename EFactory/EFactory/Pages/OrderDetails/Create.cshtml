@page
@model EFactory.OrderDetailsCreateModel

@{
    ViewData["Title"] = "Products";
}

<h1>Create</h1>

<h4>Add Products in</h4>
<h4>You are in @ViewData["OrderNumber"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
            <label asp-for="OrderDetails.OrderId" class="control-label"></label>
            <select asp-for="OrderDetails.OrderId" class="form-control" ><option>@ViewData["OrderNumber"]</option></select>
            </div>
            @*<div class="form-group">
                <label asp-for="OrderDetails.Id" class="control-label"></label>
                <select asp-for="OrderDetails.Id" class="form-control" ><option>@ViewData["OrderNumber"]</option></select>
            </div>*@
            <div class="form-group">
                <label asp-for="OrderDetails.ProductId" class="control-label"></label>
                <select asp-for="OrderDetails.ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
            </div>
            <div class="form-group">
                <label asp-for="OrderDetails.Quantity" class="control-label"></label>
                <input asp-for="OrderDetails.Quantity" class="form-control" />
                <span asp-validation-for="OrderDetails.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDetails.Price" class="control-label"></label>
                <input asp-for="OrderDetails.Price" class="form-control" />
                <span asp-validation-for="OrderDetails.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
